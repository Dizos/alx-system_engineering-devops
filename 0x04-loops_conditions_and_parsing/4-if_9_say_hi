#!/usr/bin/env bash
# This script displays "Best School" 10 times, with "Hi" after 9th iteration

# Initialize counter
count=0

# While loop to iterate 10 times
while [ $count -lt 10 ]
do
    echo "Best School"
    # Check if this is the 9th iteration (count=8 since we start from 0)
    if [ $count -eq 8 ]
    then
        echo "Hi"
    fi
    ((count++))
done
